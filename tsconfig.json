{
    "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // This is the key setting
    "rootDir": "./src"
    },
"include": ["src/**/*.ts"]
}
